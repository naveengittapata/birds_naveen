<!DOCTYPE html>
<html>
<%- include('../partials/header', {title: 'Users'}); %>

<body>
  <% include ../partials/navbar %>

  <div class="container">
   <h1>Users</h1>

   <a href="/users/create" class="btn btn-primary">+ Create User</a>

   <table id="userTable" class="table table-bordered table-striped">
    
    <thead>
      <tr>
        <td>Email</td>
        <td>First</td>
        <td>Last</td>
        <td>Role</td>
        <td>Actions</td>
      </tr>
    </thead>

     <% for(var i=0; i < data.length; i++) { %>
        <tr>
         <td><%=data[i].email%></td>
         <td><%=data[i].firstName%></td>
         <td><%=data[i].lastName%></td>
         <td><%=data[i].role%></td>
         <td><a href="/users/update?id=<%= data[i]._id %>"><img src="https://img.icons8.com/android/24/000000/edit.png"/></a> 
          <a  href="/users/delete?id=<%= data[i]._id %>" onclick="return confirm('Are you sure you want to delete this?')"><img src="https://img.icons8.com/fluent-systems-filled/24/000000/trash.png"/></a></td>
        </tr>
     <% } %>
     </table>
  </div>
  
  <% include ../partials/scripts %>

  <script type="text/javascript">
    $(document).ready( function () {
      $('#userTable').DataTable({
        responsive: true
      });
    });
  </script>
</body>

</html>