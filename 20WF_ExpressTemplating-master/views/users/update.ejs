<!DOCTYPE html>
<html>
<%- include('../partials/header', {title: 'Home Page'}); %>

<body>
    <% include ../partials/navbar %>

    <div class="container">

        <div class="col-sm-6 col-sm-offset-3">

            <h1>Update User</h1>

            <form action="/users/update" method="post">

                <input type="hidden" value="<%=data._id%>" name="id"/>

                <div class="form-group">
                    <label>Email</label>
                    <input required type="text" class="form-control" name="email" value="<%=data.email%>">
                </div>
                <div class="form-group">
                    <label>First Name</label>
                    <input required type="text" class="form-control" name="firstName" value="<%=data.firstName%>">
                </div>
                <div class="form-group">
                    <label>Last Name</label>
                    <input required type="text" class="form-control" name="lastName" value="<%=data.lastName%>">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <div class="form-group">
                    <label>Role</label>
                    <select id="role" name="role" class="form-control" required value="<%=data.role%>">
                        <option></option>
                        <%if (data.role == "Admin") {%>
                            <option value="Admin" selected>Admin</option>
                        <% } else { %>
                            <option value="Admin">Admin</option>
                        <% } %>
                        <%if (data.role == "User") {%>
                            <option value="User" selected>User</option>
                        <% } else { %>
                            <option value="User">User</option>
                        <% } %>                    
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Update User</button>
            </form>
        </div>
    </div>

    <% include ../partials/scripts %>
</body>

</html>